<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		x:Class="FindYou.PersonDetail">
	<ContentPage.Content>
		<StackLayout Spacing="10" Padding="10">
			<Image
			Grid.RowSpan="4"
			Source="{Binding ImageUri}"
			HeightRequest="40"
			WidthRequest="40"/>		          			
									
			<Label
			Grid.Column="1" 
			Text="{Binding UserName}"
			TextColor="Black"
			FontSize="12"
			FontAttributes="Bold"/>
			<Label 
			Grid.Row="1"
			Grid.Column="1" 
			Text="{Binding Status}"
			TextColor="#FFA733"
			FontSize="12"/>	

			
			
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
